{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdTicket</th>
                <td>{{ ticket.idTicket }}</td>
            </tr>
            <tr>
                <th>FechaCreacion</th>
                <td>{{ ticket.fechaCreacion ? ticket.fechaCreacion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DescripcionProblema</th>
                <td>{{ ticket.descripcionProblema }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ ticket.tipo }}</td>
            </tr>
            <tr>
                <th>ValorHora</th>
                <td>{{ ticket.valorHora }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ ticket.estado }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">back to list</a>

    <a href="{{ path('app_ticket_edit', {'idTicket': ticket.idTicket}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
