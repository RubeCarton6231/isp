{% extends 'base.html.twig' %}

{% block title %}Cliente index{% endblock %}

{% block body %}
    <h1>Cliente index</h1>
<div style="width: 90%;margin: auto; padding: 20px;">
        <table class="table">
            <thead style="border: 1px solid #000">
                <tr style="background-color: rgb(128, 45, 93); color: white; text-align: center;">
                <th>IdCliente</th>
                <th>Usuario</th>
                <th>Estado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td>{{ cliente.idCliente }}</td>
                <td>{{ cliente.idUsuario.nombre }}</td>
                <td>{{ cliente.estado }}</td>
                <td>
                    <a href="{{ path('app_cliente_show', {'idCliente': cliente.idCliente}) }}">show</a>
                    <a href="{{ path('app_cliente_edit', {'idCliente': cliente.idCliente}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_cliente_new') }}">Create new</a>
{% endblock %}
